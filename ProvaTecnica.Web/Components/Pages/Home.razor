@page "/"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using ProvaTecnica.Core.DTOs
@using ProvaTecnica.Core.Services
@inject IDashboardService DashboardService

<PageTitle>Dashboard</PageTitle>

<div class="pb-3">
    <h3>Dashboard</h3>
    <p class="text-muted">Visão geral do sistema.</p>
</div>

@if (stats is null)
{
    <p><em>Carregando estatísticas...</em></p>
}
else
{
    <div class="row">
        <AuthorizeView Roles="Admin, Professor">
            <div class="col-md-4 mb-3">
                <div class="card text-white bg-primary h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="me-3">
                                <div class="text-white-75 small">Alunos Cadastrados</div>
                                <div class="display-4">@stats.TotalAlunos</div>
                            </div>
                            <i class="bi bi-people-fill" style="font-size: 3rem;"></i>
                        </div>
                    </div>
                    <a class="card-footer d-flex align-items-center justify-content-between" href="/alunos">
                        <span>Ver Detalhes</span>
                        <i class="bi bi-arrow-right-circle"></i>
                    </a>
                </div>
            </div>
        </AuthorizeView>

        <AuthorizeView Roles="Admin">
            <div class="col-md-4 mb-3">
                <div class="card text-white bg-warning h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="me-3">
                                <div class="text-white-75 small">Turmas Ativas</div>
                                <div class="display-4">@stats.TotalTurmas</div>
                            </div>
                            <i class="bi bi-journal-bookmark-fill" style="font-size: 3rem;"></i>
                        </div>
                    </div>
                    <a class="card-footer d-flex align-items-center justify-content-between" href="/turmas">
                        <span>Ver Detalhes</span>
                        <i class="bi bi-arrow-right-circle"></i>
                    </a>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card text-white bg-success h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="me-3">
                                <div class="text-white-75 small">Matrículas Ativas</div>
                                <div class="display-4">@stats.TotalMatriculasAtivas</div>
                            </div>
                            <i class="bi bi-card-checklist" style="font-size: 3rem;"></i>
                        </div>
                    </div>
                    <a class="card-footer d-flex align-items-center justify-content-between" href="/matriculas">
                        <span>Ver Detalhes</span>
                        <i class="bi bi-arrow-right-circle"></i>
                    </a>
                </div>
            </div>
        </AuthorizeView>
    </div>
}

@code {
    private DashboardStats? stats;

    protected override async Task OnInitializedAsync()
    {
        stats = await DashboardService.GetStatsAsync();
    }
}