@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization

<div class="page">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="">Prova Técnica</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="alunos">
                                <span class="bi bi-people-fill" aria-hidden="true"></span> Alunos
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="turmas">
                                <span class="bi bi-journal-bookmark-fill" aria-hidden="true"></span> Turmas
                            </NavLink>
                        </li>
                    </ul>
                </div>
                <div class="ms-auto text-light">
                    <LoginDisplay />
                </div>
            </div>
        </nav>
    </header>

    <main class="container">
        <article class="content px-4">
            @Body
        </article>
    </main>

</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>